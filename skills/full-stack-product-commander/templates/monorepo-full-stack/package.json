{
  "name": "@fspc/monorepo-full-stack",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack monorepo template with React/Vue + NestJS/Spring Boot",
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "node scripts/dev.js",
    "build": "turbo run build",
    "test": "node scripts/test.js",
    "type-check": "turbo run type-check",
    "deploy": "node scripts/deploy.js",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js",
    "db:reset": "node scripts/db-reset.js",
    "db:studio": "npm run studio --prefix apps/api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose up -d --build",
    "health": "concurrently \"curl http://localhost:3000/health\" \"curl http://localhost:4000/api/health\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^1.10.0",
    "prettier": "^3.0.0",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}